{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false
  },
  "include": [
    "cmd/**/*.ts",
    "internal/**/*.ts",
    "tests/**/*.ts",
    "vitest.config.ts"
  ]
}
