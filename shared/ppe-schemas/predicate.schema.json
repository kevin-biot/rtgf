{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.lane2.ai/ppe/predicate.schema.json",
  "title": "PPE Predicate",
  "type": "object",
  "required": ["id", "domain", "inputs", "logic"],
  "properties": {
    "id": {"type": "string"},
    "description": {"type": "string"},
    "domain": {"type": "string"},
    "applies_when": {"type": "object"},
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "required"],
        "properties": {
          "name": {"type": "string"},
          "type": {"type": "string"},
          "required": {"type": "boolean"}
        }
      }
    },
    "derive": {"type": "array", "items": {"type": "object"}},
    "logic": {"type": "object"},
    "on_fail": {
      "type": "object",
      "properties": {
        "decision": {"type": "string", "enum": ["DENY", "PERMIT_WITH_CONTROLS"]},
        "reason": {"type": "string"}
      }
    }
  }
}
